<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Profile"
    android:background="@color/colorBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/Profile_TXT_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Name"
            android:textColor="@color/colorDarkText"
            android:textSize="40dp" />

        <TextView
        android:id="@+id/Profile_TXT_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="25dp"
        android:textColor="@color/colorDarkText"
        android:layout_marginBottom="10dp"
        />
        <TextView
            android:id="@+id/Profile_TXT_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone Number"
            android:textSize="25dp"
            android:textColor="@color/colorDarkText"
            android:layout_marginBottom="75dp"
            />
        <Button
            android:id="@+id/Profile_BTN_edit"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:background="@drawable/mybtn"
            android:layout_marginBottom="50dp"
            android:text="Edit details"
            />

        <Button
            android:id="@+id/Profile_BTN_LogOut"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:background="@drawable/mybtn"
            android:layout_marginBottom="30dp"
            android:text="Log Out"
            />

        <Button
            android:id="@+id/Profile_BTN_delete"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:textColor="#ffffff"
            android:textSize="7dp"
            android:background="@drawable/mybtn"
            android:text="Delete Account"
            android:layout_marginBottom="30dp"
            />

        <ImageView
            android:id="@+id/Main_IMG_logo"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:rotation="@integer/google_play_services_version"
            app:srcCompat="@drawable/cocktail" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>